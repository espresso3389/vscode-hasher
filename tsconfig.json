{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"noFallthroughCasesInSwitch": true,
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"alwaysStrict": true,
		"noImplicitThis": true
	},
	"exclude": [
		"node_modules"
	]
}